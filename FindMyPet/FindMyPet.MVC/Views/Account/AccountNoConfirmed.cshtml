
@{
    ViewBag.Title = "Cuenta no Confirmada";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="g-flex-center h-100">
    <div class="container g-bg-gray-100">
        <div class="text-center g-border g-border-gray-300 g-border-3x g-py-30 g-py-md-100">
            <h3 class="g-font-size-md-30 g-font-size-30 g-text-primary">Su cuenta aun no ha sido confirmada :(</h3>
            <ul class="list-unstyled g-text-gray-600 g-my-15 g-my-md-40">
                <li class="g-mb-4 g-mb-md-10">Revise su correo y encontrara un mail con un link para confirmar su cuenta</li>
                <li class="g-mb-4 g-mb-md-10">o @Html.ActionLink("Reenvie el mail de Confirmación", "ResendConfirmationEmail", "Account", routeValues: new { email = @ViewBag.ConfirmationEmail }, htmlAttributes: null).</li>
            </ul>
            <h2 class="font-montserrat font-weight-bold g-mb-30">"Unidos por nuestros Engreidos"</h2>
        </div>
    </div>
</div>

