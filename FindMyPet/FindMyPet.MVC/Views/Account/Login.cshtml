@using FindMyPet.MVC.Models
@model LoginViewModel
@{
    ViewBag.Title = "Iniciar Sesión";
}

@using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "login-form-1", role = "form" }))
{
    @Html.AntiForgeryToken()

    <!-- Login Section -->
    <section class="login-section g-py g-bg-white">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="g-bg-white g-border g-border-gray-300 g-px-30 g-py-35 g-shadow-v1">
                        <h4 class="text-center g-pb-35 font-weight-bold">Iniciar Sesión</h4>
                        <!-- Login Form -->
                        <div class="form-group">
                            <label for="email">Correo</label>
                            <div class="input-group input-group-focus">
                                <span class="input-group-prepend g-w50">
                                    <i class="fa fa-envelope"></i>
                                </span>
                                @Html.TextBoxFor(m => m.Email, new { @id = "email", @name = "email", @class = "form-control form-control-lg", @placeholder = "Correo", MaxLength = 30 })
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="password">Contraseña</label>
                            <div class="input-group input-group-focus">
                                @Html.PasswordFor(m => m.Password, new { @id = "password", @name = "password", @class = "form-control form-control-lg", @placeholder = "Contraseña", MaxLength = 20 })
                                <span class="input-group-append g-w50">
                                    <i class="fa fa-lock"></i>
                                </span>
                            </div>
                        </div>

                        <div class="form-group d-lg-flex align-items-lg-center">
                            <div class="custom-control cn-custom-checkbox d-flex align-items-center">
                                @Html.CheckBoxFor(m => m.RememberMe, new { @id = "customCheck1", @name = "customCheck1", @class="custom-control-input" })
                                <label class="custom-control-label" for="customCheck1">
                                    <span>Recordarme</span>
                                </label>
                            </div>
                            <div class="ml-auto">
                                <p><a href="~/Account/ForgotPassword">Olvidaste tu Contraseña? </a></p>
                            </div>
                        </div>

                        <div class="g-mb">
                            @Html.ValidationSummary("", new { @class = "text-danger" })
                            @*
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            *@
                        </div>

                        <div class="form-group g-mb g-py-15 text-center">
                            <input type="submit" value="Iniciar Sesión" class="btn cn-btn-primary" />
                        </div>
                        <div class="text-center">
                            <p>¿No tienes una cuenta? <a href="/Account/Register">Crear Cuenta</a></p>
                        </div>
                        <!-- END Login Form 1 -->

                        @*
                        <hr class="g-mb-0">
                        <p class="text-center g-font-size-18 g-py-10">or use</p>
                        <div class="g-mb-20 d-md-flex">
                            <a href="#" class="btn w-100 g-mr-md-5 g-mb-5 facebook-btn">Facebook</a>
                            <a href="#" class="btn w-100 g-ml-md-5 g-mb-5 google-btn">Google</a>
                        </div>
                        *@
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- END Login Section -->
}

