@{
    ViewBag.Title = "Confirmación reiniciar contraseña";
}

<section class="login-section g-py g-bg-white">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="g-bg-white g-border g-border-gray-300 g-px-30 g-py-35 g-shadow-v1">
                    <h4 class="text-center g-pb-35 font-weight-bold">Reiniciar contraseña</h4>
                    <div class="text-center">
                        <p>Tu contraseña ha sido reiniciada.</p>
                        <br />
                        <p>Ahora puedes @Html.ActionLink("Iniciar Sesión", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</p>
