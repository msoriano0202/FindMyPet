@model FindMyPet.MVC.Models.EmailSender.EmailSenderViewModel

@{
    ViewBag.Title = "Prueba de Correos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="petSearch" class="g-border-gray-300">
    <div class="container g-py-40 g-px-10">
        <div class="section-title text-center g-mb-30">
            <h4 class="title text-uppercase cn-heading-v2 font-weight-bold">Prueba de Correos</h4>
        </div>

        @using (Html.BeginForm())
        {
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="input1-1" class="g-text-primary"><strong>Tipo de Correo</strong></label>
                        <div class="input-group input-group-focus">
                            <div class="col-sm-10">
                                @Html.DropDownListFor(m => m.SelectedEmailTypeId, Model.EmailTypes, new { @id = "input1-1", @class = "form-control" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="input1-2" class="g-text-primary"><strong>Tipo de Visualizacion</strong></label>
                        <div class="input-group input-group-focus">
                            <div class="col-sm-10">
                                @Html.DropDownListFor(m => m.SelectedViewTypeId, Model.ViewTypes, new { @id = "input1-2", @class = "form-control" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="input1-3" class="g-text-primary"><strong>Correo</strong></label>
                        <div class="input-group input-group-focus">
                            <div class="col-sm-10">
                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @id = "input1-3", @class = "form-control", @placeholder = "Correo ..." } })
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="g-mb">
                @Html.ValidationSummary("", new { @class = "text-danger" })
            </div>

            <div class="form-group g-mt-20 g-ml-10">
                <button type="submit" class="btn btn-outline-primary g-mr-10">
                    <i class="fa fa-paper-plane g-font-size-12 g-mr-5"></i> Enviar
                </button>
            </div>
        }

    </div>
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}