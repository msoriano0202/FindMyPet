@model FindMyPet.MVC.Models.Pet.PetViewModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="g-mb-15">
        <span class="h4">Agregar Mascota</span>
    </div>
    <div class="g-bg-white g-border g-border-gray-300 g-mb-10 g-p-20 g-shadow-v1">
        <div class="form-group row">
            <label class="col-sm-2 col-form-label" for="input1-1">Nombre:</label>
            <div class="col-sm-5">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @id = "input1-1", @class = "form-control", @placeholder = "Nombre" } })
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label" for="input1-2">Fecha Nacimiento:</label>
            <div class="col-sm-2">
                @Html.TextBoxFor(Model => Model.DateOfBirth, "{0:yyyy-MM-dd}", new { @id = "input1-2", @class = "form-control", @type = "date" })
            </div>
        </div>
    </div>

    <div class="g-mb">
        @Html.ValidationSummary("", new { @class = "text-danger" })
    </div>

    <div class="form-group g-mt-15">
        <input type="submit" class="btn cn-btn-primary g-mr-10" value="Actualizar" />
        <a href="/Pet" class="btn cn-btn-secondary">Cancelar</a>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
