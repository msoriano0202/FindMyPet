@model FindMyPet.MVC.Models.Pet.PetPagedListViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="g-mb-10">
    <span class="h3">Mis Mascotas</span>
    <a href="/Pet/Create" class="btn cn-btn-primary g-ml-20 g-mb-10">Agregar Mascota</a>
</div>

@{
    int index = (Model.Pagination.CurrentPage - 1) * Model.Pagination.PageSize;
 }

@if (!Model.Records.Any())
{
    <div class="g-flex-center h-100">
        <div class="container g-bg-gray-100">
            <div class="text-center g-border g-border-gray-300 g-border-3x g-py-30 g-py-md-10">
                <img src="@Url.Content("/Content/Images/DefaultPetImage.png")" class="img-fluid rounded-circle" alt="Profile Picture">
                <ul class="list-unstyled g-text-gray-600 g-my-15 g-my-md-10">
                    <li class="g-mb-4 g-mb-md-10">No tiene Mascotas registradas.</li>
                    <li class="g-mb-4 g-mb-md-10">Agrege sus Mascotas.</li>
                </ul>
            </div>
        </div>
    </div>
}
else
{
    <div class="text-center">
        <div class="g-mb-20 g-bg-white g-border g-border-gray-300 g-p-20 g-shadow-v1" style="height:350px">
            <div class="table-responsive">
                <table class="table g-mb-0">
                    <thead class="thead-light">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Nombre</th>
                            <th scope="col">Fecha Nacimiento</th>
                            <th scope="auto">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Records)
                        {
                            index++;
                            <tr>
                                <th scope="row">@index</th>
                                <td>@item.Name</td>
                                <td>@item.DateOfBirth.ToString("dd / MMM / yyyy")</td>
                                <td>
                                    @*<a href="/Pet/Edit/@item.Code" class="btn btn-xs cn-btn-bluegray-600">Editar</a>*@

                                    <a id="editPet" href="/Pet/Edit/@item.Code" class="btn btn-xs cn-btn-dark g-mr-5" title="Editar">
                                        <i class="fa fa-pencil fa-fw"></i>
                                    </a>
                                    <a id="deletePet" href="#" class="btn btn-xs cn-btn-dark g-mr-5" title="Eliminar">
                                        <i class="fa fa-trash fa-fw"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        @if (Model.Pagination.EnablePagination)
        {
            @Html.Partial("../Shared/_Pagination", Model.Pagination)
        }
    </div>
}
