                            @Html.ActionLink("Contactanos", "Contact", "Home", null, new { @class = "nav-link" })
                        </li>
                        @if (Request.IsAuthenticated)
                        {
                        <li class="nav-item">
                            @*@Html.ActionLink("Mis Mascotas", "Index", "Pet", null, new { @class = "nav-link" })*@
                            <a id="registerLink" href="/Pet" class="nav-link">
                                <i class="icon-social-github g-mr-5"></i><span>Mis Mascotas</span>
                            </a>
                        </li>
                        }
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            </div>

        </nav>
    </div>
    <!-- END Main Navbar -->
</header>
<!-- END Header -->