
<!-- Header -->
<header id="header" class="cn-header position-relative">
    <!-- Main Navbar -->
    @*class="cn-navbar-wrapper g-border-b g-border-gray-300"  g-bg-bluegray-700 bg-dark*@
    <div class="cn-navbar-wrapper cn-navbar-white-color g-bg-bluegray-700">
        <nav class="navbar navbar-expand-lg">

            <div class="container">
                <div class="logo-wrapper">
                    @*<a class="navbar-brand" href="/Home"><img class="logo" src="http://via.placeholder.com/150x50/eee/777" alt="Logo"></a>*@
