                            <a id="adminLink" href="/Admin" class="nav-link">
                                <i class="icon-grid g-mr-5"></i><span>Admin</span>
                            </a>
                        </li>
                        }
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            </div>

        </nav>
