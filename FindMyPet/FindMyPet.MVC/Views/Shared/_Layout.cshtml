    <link rel="stylesheet" href="~/CNoteV1.0/assets/vendor/css/simple-line-icons.css">
    <!-- Plugins -->
    <link rel="stylesheet" href="~/CNoteV1.0/assets/vendor/css/owl.carousel.css">
    <link rel="stylesheet" href="~/CNoteV1.0/assets/vendor/css/magnific-popup.css">
    <link rel="stylesheet" href="~/CNoteV1.0/assets/vendor/css/jquery-ui-slider.css">

    <!-- Main [ Bootstrap, Components, Generals ] -->
    <link rel="stylesheet" href="~/CNoteV1.0/cnote-main/assets/css/main.css">

    <!-- Your custom code -->
    <link rel="stylesheet" href="~/CNoteV1.0/cnote-main/assets/css/custom.css">

    <!-- Favicon Image-->
    <link rel="icon" type="image/x-icon" href="~/CNoteV1.0/assets/images/favicon.ico">
