@model FindMyPet.MVC.Models.Shared.PaginationViewModel

@{
    string IsActivePage(int pageNumber)
    {
        var str = string.Empty;

        if (pageNumber == Model.CurrentPage)
            str = "active";

        return str;
    }

    string Disable(int currentPage, int fixedPage)
    {
        var str = string.Empty;

        if (currentPage == fixedPage)
            str = "disabled";

        return str;
    }
}

<nav class="cn-pagination">
    <ul class="list-unstyled">
        @*disabled*@
        <li class="page-item previous-item @Disable(Model.CurrentPage, 1)">
            <a class="page-link" href="@string.Format("{0}1",Model.ActionUrl)" tabindex="-1"><i class="fa fa-long-arrow-left"></i></a>
        </li>
        @for (int page = 1; page <= Model.TotalPages; page++)
        {
            <li class="page-item @IsActivePage(page)"><a class="page-link" href="@string.Format("{0}{1}",Model.ActionUrl,@page)">@page</a></li>
        }
        @*
            <li class="page-item active"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item"><a class="page-link" href="#">4</a></li>
            <li class="page-item"><span class="g-p-5">...</span></li>
            <li class="page-item"><a class="page-link" href="#">18</a></li>*@
        <li class="page-item next-item @Disable(Model.CurrentPage, Model.TotalPages)">
            <a class="page-link" href="@string.Format("{0}{1}",Model.ActionUrl, Model.TotalPages)"><i class="fa fa-long-arrow-right"></i></a>
        </li>
    </ul>
</nav>